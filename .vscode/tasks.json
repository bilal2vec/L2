{
	"version": "2.0.0",
	"windows": {
		"options": {
			"shell": {
				"executable": "c:\\windows\\sysnative\\bash.exe",
				"args": ["-c"]
			}
		}
	},
	"tasks": [
		{
			"label": "build main.cpp",
			"type": "shell",
			"command": "g++",
			"args": ["-g", "-o", "main.out", "main.cpp", "-Llib", "-lL2"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "run cmake",
			"type": "shell",
			"command": "rm -rf build && mkdir build && cd build && cmake .. -DCMAKE_INSTALL_PREFIX=../ ",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "build L2",
			"type": "shell",
			"command": "cd build && make && make install",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "clean up files",
			"type": "shell",
			"command": "rm -rf build && rm lib/libL2.a && rm main.out",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}
